@model LearningHub.Nhs.Auth.Models.Account.LoggedOutViewModel

@{
    Layout = "_Signout_Layout";
}

<div class="lh-top-info" style="margin-top:5px;">
    @if (Model.PostLogoutRedirectUri != null)
    {
    <p>
        You are now logged out and will be redirected to the sign-in page.
        If this does not happen, you can go to the <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">@Model.ClientName</a>.
    </p>
    }
    else
    {
        <p>
            You are now logged out.
        </p>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
